---
import { Icon } from 'astro-icon'
import * as repoData from 'package.json'
const today = new Date()
---

<footer>
  <div class="container">
    <a class="to_top" title="back to top" href="#top">
      <Icon name="up" />
    </a>

    <a class="title" href="/" title="back to home page">
      <h2 class="h3">Rocco Marosi</h2>
      <div>Architecture Photography</div>
    </a>

    <div class="contacts">
      <a
        title="send me an email"
        class="open_in_new_window"
        href="mailto:rocco.marosi@gmail.com"
        target="_blank"
        rel="noopener">
        <Icon name="mail" />
      </a>

      <a
        title="connect using instagram"
        class="open_in_new_window"
        href="https://www.instagram.com/rocco.marosi"
        target="_blank"
        rel="noopener">
        <Icon name="instagram" />
      </a>

      <span title="QR code quick link">
        <Icon name="qr" />
      </span>
    </div>

    <div class="copyright">
      2012-{today.getFullYear()} Â© Rocco Marosi. <br /><small
        >All rights reserved.</small
      >
      <br /><small>Some property names are fortuitous.</small><br /><small
        >{'v' + repoData.version}. Powered by
      </small><a
        title={'JUNGLE STARRING ROCCO MAROSI | v' + repoData.version}
        href="https://junglestar.org"
        target="_blank"
        class="open_in_new_window"
        rel="noopener"
        >Junglestar.
      </a>
    </div>
  </div>
</footer>

<style lang="scss">
  footer {
    background-color: var(--primary-inverse) !important;
    color: var(--primary-inverse-text) !important;
    height: 100dvh;
  }
  .container {
    position: relative !important;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    @media only screen and (min-width: 641px) {
      align-items: flex-start;
    }
  }
  svg {
    width: 50px;
    height: 50px;
    color: var(--primary-inverse-text) !important;
  }
  h2 {
    margin: 0 !important;
    color: var(--primary-inverse-text) !important;
  }
  a {
    color: var(--primary-inverse-text) !important;
    &:hover {
      text-decoration: none;
    }
  }
  .title {
    display: block;
    padding-bottom: var(--spacing);
    color: var(--primary-inverse-text) !important;
  }
  .copyright {
    padding-top: var(--spacing);
    font-size: initial;
    text-align: center;
    @media only screen and (min-width: 641px) {
      text-align: left;
    }
  }
  .to_top {
    position: absolute;
    top: 0;
    right: var(--spacing);
  }
</style>
